#KIVY DESIGN
# Custom button
<CustButton@Button>:

    font_size: 25
    background_normal: ''
    background_color: (30/255, 63/255, 102/255)
    font_name: 'DejaVuSans'


# Define id so we can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 7
    padding: 8
    spacing: 8



    # Where input is displayed
    BoxLayout:
        TextInput:

            id: entry
            font_size: 32
            multiline: False
            background_color: (105/255, 105/255, 105/255)
            foreground_color: (1, 1, 1, 1)
            font_name: 'Georgia'


    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 4

        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text
            background_color: (0/255, 0/255, 0/255)

        CustButton:
            text: "/"
            on_press: entry.text += self.text
            background_color: (255/255, 140/255, 0/255)

    BoxLayout:
        spacing: 4

        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text
        CustButton:
            text: "*"
            on_press: entry.text += self.text
            background_color: (255/255, 140/255, 0/255)

    BoxLayout:
        spacing: 4

        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text
        CustButton:
            text: "-"
            on_press: entry.text += self.text
            background_color: (255/255, 140/255, 0/255)

    BoxLayout:
        spacing: 4

        CustButton:
            text: "."
            on_press: entry.text += self.text
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: "C"
            on_press: entry.text = ""

        CustButton:
            text: "+"
            on_press: entry.text += self.text
            background_color: (255/255, 140/255, 0/255)

    BoxLayout:
        spacing: 4

        CustButton:
            text: "="
            on_press: calculator.calculate(entry.text)
            background_color: (255/255, 140/255, 0/255)

